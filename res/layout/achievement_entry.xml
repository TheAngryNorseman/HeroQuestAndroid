<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:id="@+id/achievement_list_item">
	<LinearLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:orientation="vertical" android:weightSum="2">

		<TextView android:id="@+id/title" android:layout_width="wrap_content"
			android:layout_height="0dp" android:layout_weight="1"
			android:paddingLeft="5dp" android:text="Title"
			android:textAppearance="?android:attr/textAppearanceMedium" />

		<TextView android:id="@+id/description" android:layout_width="wrap_content"
			android:layout_height="0dp" android:layout_weight="1"
			android:paddingLeft="5dp" android:text="Description" />

	</LinearLayout>

	<ImageView android:id="@+id/achieved_image"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" android:layout_centerVertical="true"
		android:padding="5dp" android:src="@drawable/gold_star" />

	<TextView android:id="@+id/achieved_date"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerVertical="true" android:layout_toLeftOf="@+id/achieved_image"
		android:padding="5dp" android:text="Date" />

</RelativeLayout>