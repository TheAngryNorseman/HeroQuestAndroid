<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/FrameLayout1" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<ImageView android:id="@+id/quest_image_view" android:layout_width="match_parent"
		android:layout_height="match_parent" android:alpha="0.2"
		android:src="@drawable/quest_default" />

	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="match_parent">
		<TextView android:id="@+id/title_text_view"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
			android:textColor="#FFFFFF" android:text="Title"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView
		    android:id="@+id/story_text_view"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/title_text_view"
		    android:textColor="#FFFFFF"
		    android:text="TextView" />

	</RelativeLayout>

</FrameLayout>